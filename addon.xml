<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="identity.did.github"
       name="GitHub Decentralized ID (DID)"
       version="1.0.0"
       provider-name="Team Kodi">
  <backwards-compatibility abi="1.0.0"/>
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="kodi.identity.did" library="addon.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/garbear/identity.did.github</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
    <summary lang="en_GB">GitHub Decentralized ID (DID)</summary>
    <description lang="en_GB">This add-on allows users to securely store identity credentials in a GitHub repo.</description>
  </extension>
</addon>
